{
  "schemaVersion": 2,
  "services": [
    {
      "name": "dockpeek",
      "image": "dockpeek/dockpeek:latest",
      "isMain": true,
      "addPorts": [
        {
          "hostPort": "8000",
          "containerPort": "8000",
          "tcp": true,
          "udp": false
        }
      ],
      "internalPort": "8000",
      "volumes": [
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock",
          "readOnly": false
        }
      ],
      "environment": [ 
        {
          "key": "SECRET_KEY", 
          "value": "${SECRET_KEY}"
        },
        {
          "key": "USERNAME",
          "value": "${USERNAME}"
        },
        {  
          "key": "PASSWORD",
          "value": "${PASSWORD}"
        } 
      ]
    }
  ]
}