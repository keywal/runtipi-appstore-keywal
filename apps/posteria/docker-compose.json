{
  "schemaVersion": 2,
  "schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "posteria",
      "image": "bozodev/posteria:latest",
      "isMain": true,
      "addPorts": [
        {
          "hostPort": 8818,
          "containerPort": 80,
          "tcp": true,
          "udp": false
        }
      ],
      "internalPort": 80,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/posters",
          "containerPath": "/var/www/html/posters",
          "readOnly": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/www/html/data",
          "readOnly": false
        }
      ],
      "environment": [
      { "key" : "SITE_TITLE", "value" : "Posteria" },
      { "key" : "AUTH_USERNAME", "value" : "${AUTH_USERNAME}" },
      { "key" : "AUTH_PASSWORD", "value" : "${AUTH_PASSWORD}" },
      { "key" : "SESSION_DURATION", "value" : "3600" },
      { "key" : "AUTH_BYPASS", "value" : "false" },
      { "key" : "IMAGES_PER_PAGE", "value" : "24" },
      { "key" : "MAX_FILE_SIZE", "value" : "5242880" },
      { "key" : "PLEX_SERVER_URL", "value" : "${PLEX_SERVER_URL}" },
      { "key" : "PLEX_TOKEN", "value" : "${PLEX_TOKEN}" },
      { "key" : "PLEX_REMOVE_OVERLAY_LABEL", "value" : "false" },
      { "key" : "IGNORE_ARTICLES_IN_SORT", "value" : "true" },
      { "key" : "SORT_BY_DATE_ADDED", "value" : "false" },
      { "key" : "AUTO_IMPORT_ENABLED", "value" : "false" },
      { "key" : "AUTO_IMPORT_SCHEDULE", "value" : "1h" },
      { "key" : "AUTO_IMPORT_MOVIES", "value" : "false" },
      { "key" : "AUTO_IMPORT_SHOWS", "value" : "false" },
      { "key" : "AUTO_IMPORT_SEASONS", "value" : "false" },
      { "key" : "AUTO_IMPORT_COLLECTIONS", "value" : "false" }
      ]
    }
  ]
}