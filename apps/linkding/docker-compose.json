{
  "schemaVersion": 2,
  "schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "linkding",
      "image": "sissbruecker/linkding:latest",
      "isMain": true,
      "addPorts": [
        {
          "hostPort": "8666",
          "containerPort": "9090",
          "tcp": true,
          "udp": false
        }
      ],
      "internalPort": "9090",
      "environment": 
      [
        { "key": "LD_SUPERUSER_NAME", "value": "${LD_SUPERUSER_NAME}" },
        { "key": "LD_SUPERUSER_PASSWORD", "value": "${LD_SUPERUSER_PASSWORD}" },
        { "key": "LD_SUPERUSER_EMAIL", "value": "${LD_SUPERUSER_EMAIL}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/etc/linkding/data",
          "readOnly": false
        }
      ]
    }
  ]
}
