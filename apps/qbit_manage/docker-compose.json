{
  "schemaVersion": 2,
  "schema": "https://schemas.runtipi.io/dynamic-compose.json",
  "services": [
    {
      "name": "qbit_manage",
      "image": "ghcr.io/stuffanthings/qbit_manage:latest",
      "isMain": true,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/config",
          "readOnly": false
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/data/torrents",
          "readOnly": false
        },
        {
          "hostPath": "/opt/runtipi/app-data",
          "containerPath": "/qbittorrent/",
          "readOnly": true
        }
      ],
      "environment": 
      [ 
      { "key" : "QBT_RUN", "value": "false" },
      { "key" : "QBT_SCHEDULE", "value": "1440" },
      { "key" : "QBT_CONFIG", "value": "/config/config.yml" },
      { "key" : "QBT_LOGFILE", "value": "/config/activity.log" },
      { "key" : "QBT_RECHECK", "value": "false" },
      { "key" : "QBT_CAT_UPDATE", "value": "false" },
      { "key" : "QBT_TAG_UPDATE", "value": "false" },
      { "key" : "QBT_REM_UNREGISTERED", "value": "false" },
      { "key" : "QBT_REM_ORPHANED", "value": "false" },
      { "key" : "QBT_TAG_TRACKER_ERROR", "value": "false" },
      { "key" : "QBT_TAG_NOHARDLINKS", "value": "false" },
      { "key" : "QBT_SHARE_LIMITS", "value": "false" },
      { "key" : "QBT_SKIP_CLEANUP", "value": "false" },
      { "key" : "QBT_DRY_RUN", "value": "false" },
      { "key" : "QBT_LOG_LEVEL", "value": "INFO" },
      { "key" : "QBT_WIDTH", "value": "100" }
      ]
    }
  ]
}